<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginRight="3dp"
    android:clipToPadding="false"
    android:layout_marginLeft="3dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:maxHeight="45dp"

        android:adjustViewBounds="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:progress="75"
        android:id="@+id/track"
        app:trackColor="@color/black"
        app:indicatorColor="@color/mint"
        app:trackCornerRadius="7dp"
        app:indicatorSize="30dp"
        app:trackThickness="2dp"
        app:layout_constraintTop_toTopOf="@id/iv_date"
        app:layout_constraintEnd_toEndOf="@id/iv_date"
        app:layout_constraintStart_toStartOf="@id/iv_date"
        app:layout_constraintBottom_toBottomOf="@id/iv_date"

         android:layout_height="30dp" android:layout_width="30dp"/>

    <TextView

        android:layout_marginVertical="10dp"
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:paddingHorizontal="5dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/montserrat_regular"
        android:text="30"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_date"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
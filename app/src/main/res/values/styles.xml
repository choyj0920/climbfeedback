<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosanskr_extralight</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="tab_text_sel" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="calendar_date_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="calendar_date_tv">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_date_selected</item> <!-- 날짜 선택 시의 배경 -->
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/logo_climate</item>
    </style>
</resources>